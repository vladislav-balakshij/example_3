extends layout
block head
	+add-meta('Unit Test - Button')
block intro
	+docs-intro('Buttons', 'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Eos ipsa repellat quia totam ab doloribus!')
block content
	+e.group
		+docs-group-title('Button "Sizes":')
		+b.vbtn-group
			+b.BUTTON.vbtn Default button
			+b.BUTTON.vbtn._size-lg Large button
		+docs-code('pug')
			| +b.BUTTON.vbtn Default button
			| +b.BUTTON.vbtn._size-lg Large button
		+b.vbtn-group
			+b.BUTTON.vbtn._size-fluid Fluid Default button
			+b.BUTTON.vbtn._size-fluid._size-lg Fluid Large button
		+docs-code('pug')
			| +b.BUTTON.vbtn._size-fluid Fluid Default button
			| +b.BUTTON.vbtn._size-fluid._size-lg Fluid Large button
	+e.group
		+docs-group-title('Button "Colors":')
		+b.vbtn-group
			+b.BUTTON.vbtn._white White button
			+b.BUTTON.vbtn._brand-1 Brand-1 button
	+e.group
		+docs-group-title('Button "Border":')
		+b.BUTTON.vbtn._border-brand-1 Button border-brand-1
	+e.group
		+docs-group-title('Button "Hover effect":')
		+b.vbtn-group
			+b.BUTTON.vbtn._brand-1._brand-1-simple Button "Simple"
			+b.BUTTON.vbtn._brand-1.veffect._line.left.top Button "Line"
			+b.BUTTON.vbtn._brand-1.veffect._skew Button "Skew"
			+b.BUTTON.vbtn._brand-1.veffect._shutter-y-out Button "Shutter Y out"
			+b.BUTTON.vbtn._brand-1.veffect._shutter-x-out Button "Shutter X out"
			+b.BUTTON.vbtn._brand-1.veffect._bounce-top Button "Bounce Top"
			+b.BUTTON.vbtn._brand-1.veffect._bounce-bottom Button "Bounce Bottom"